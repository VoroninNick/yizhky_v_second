<section class="dashboard-login-wrapper">
  <section id="dashboard-login">
    <div class="dashboard-row">
      <div class="header-login">
        <h2>Вхід в особистий кабінет</h2>
      </div>
      <div class="body-login">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: 'off' }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, :autocomplete => 'off', label: "Електронна пошта", placeholder: 'nazariy.papizh@gmail.com' %>
            <%= f.input :password, required: false, :autocomplete => 'off', label: "Пароль", placeholder: 'password' %>
            <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <%#= f.button :submit, "Sign in" %>
        <% end %>
        <div class="links-login">
          <div class="facebook">
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Або, увійдіть через соціальну мережу", omniauth_authorize_path(resource_name, provider) %>
            <% end -%>
          </div>
          <div class="password-forget">
            <%= link_to "Забули пароль?", new_password_path(resource_name) %>
          </div>
          <div class="new-user">
            <%= link_to "Новий користувач", new_registration_path(resource_name) %>
          </div>
          <%#= render "devise/shared/links" %>
        </div>
      </div>
      <div class="footer-login">
        <a href="" id="submit-me">Увійти</a>
      </div>
    </div>
  </section>
</section>
<script type="text/javascript" charset="utf-8">
  document.getElementById('user_password').onkeydown = function(e){
    if(e.keyCode == 13){
      $("#new_user").submit();
    }
  };
  $(document).ready(function(){
    $("#submit-me").click(function(submit_me){
      submit_me.preventDefault();
      $("#new_user").submit();
    });
  });
</script>




